@model List<Dictionary<string, object>>

@{
    ViewBag.Title = "View Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item["ProductName"]</td>
                <td>@item["Price"]</td>
                <td>@item["Quantity"]</td>
                <td>@(Convert.ToDecimal(item["Price"]) * Convert.ToInt32(item["Quantity"]))</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.Sum(item => Convert.ToDecimal(item["Price"]) * Convert.ToInt32(item["Quantity"]))</p>

@Html.ActionLink("Continue Shopping", "Index", "Customer", new { @class = "btn btn-primary" })
@Html.ActionLink("Confirm", "ConfirmOrder", "Customer", new { @class = "btn btn-success" })
