@model List<E_ShopTask3.EF.Product>

@{
    ViewBag.Title = "AddToCart";
}

<h2>Shopping Cart</h2>
<p>
    <a href="/Home/Index/">Cotinue Shoping</a>
    @Html.ActionLink("Confirm", "ConfirmOrder", new { id = ViewBag.ProductId }) 
</p>

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <input type="number" name="quantity" value="@item.Quantity" min="1" class="btn btn-outline-secondary" />
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveFromCart", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>
