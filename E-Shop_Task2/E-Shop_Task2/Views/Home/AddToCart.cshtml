@model IEnumerable<E_Shop_Task2.EF.Product>

@{
    ViewBag.Title = "AddToCart";
}

<h2>AddToCart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.ActionLink("Continue Shoping", "Index", new { id=item.ProductId }) |
            @Html.ActionLink("Remove", "RemoveFromCart", new { id=item.ProductId }) |
            @Html.ActionLink("Confirm", "", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
